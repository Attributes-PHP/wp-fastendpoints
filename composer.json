{
	"name": "myspanishnow/wp-fastendpoints",
	"type": "library",
	"description": "Fast to type. Fast to run WordPress REST endpoints",
	"keywords": [
		"wordpress",
		"fastest",
		"rest-api"
	],
	"license": "MIT",
	"require": {
    	"php": "^7.4|^8.0",
		"opis/json-schema": "^2.3"
	},
	"autoload": {
		"psr-4": {
			"Wp\\FastEndpoints\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wp\\FastEndpoints\\": "src/",
			"Tests\\Wp\\FastEndpoints\\": "tests/"
		}
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"infinum/eightshift-coding-standards": "^1.6",
		"php-stubs/wordpress-stubs": "^5.9",
		"szepeviktor/phpstan-wordpress": "^1.1",
		"mockery/mockery": "^1.5",
		"dingo-d/wp-pest": "^1.6",
		"mikey179/vfsstream": "^1.6",
		"roots/acorn": "^2.1"
	},
	"scripts": {
		"analyze": [
			"./vendor/bin/phpstan analyze"
		],
		"lint": [
			"phpcs"
		],
		"fix": [
			"phpcbf"
		]
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"pestphp/pest-plugin": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
