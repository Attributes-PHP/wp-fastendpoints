{
	"name": "matapatos/wp-fastendpoints",
	"type": "library",
	"description": "Wordpress REST endpoints made easy",
	"keywords": ["Wordpress", "fastest", "REST", "API", "easy"],
	"license": "MIT",
	"require": {
    	"php": "^7.4|^8.0",
		"opis/json-schema": "^2.3",
    	"roots/acorn": "^2.1",
    	"matapatos/wp-exceptions": "^1.0@beta"
	},
	"autoload": {
		"psr-4": {
			"Wp\\FastEndpoints\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wp\\FastEndpoints\\": "src/",
			"Tests\\Wp\\FastEndpoints\\": "tests/"
		}
	},
	"require-dev": {
	    "squizlabs/php_codesniffer": "^3.4",
		"mockery/mockery": "^1.5",
		"dingo-d/wp-pest": "^1.6",
		"mikey179/vfsstream": "^1.6"
	},
	"scripts": {
	    "lint": [
	      "phpcs --ignore=vendor,examples --extensions=php --standard=PSR12 ."
	    ],
	    "fix": [
	      "phpcbf --ignore=vendor,examples --extensions=php --standard=PSR12 ."
	    ]
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"pestphp/pest-plugin": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
